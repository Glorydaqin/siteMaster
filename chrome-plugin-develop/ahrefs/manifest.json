{
	"name": "ahrefs login",
	"version": "3.3",
	"description": "私人使用ahrefs登录工具",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_title": "ahrefs login",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"background": {
		"scripts": [
			"js/jquery2.1.4.min.js",
			"js/account.js",
			"js/background.js"
		],
		"persistent": true
	},
	"permissions": [
		"tabs",
		"cookies",
		"<all_urls>",
		"webRequest",
		"webRequestBlocking",
		"storage"
	],
	"content_scripts": [{
		"matches": [
			"https://ahrefs.com/*"
		],
		"js": [
			"js/jquery2.1.4.min.js",
			"js/content-script.js"
		],
		"css": [],
		"run_at": "document_start"
	}]
}
